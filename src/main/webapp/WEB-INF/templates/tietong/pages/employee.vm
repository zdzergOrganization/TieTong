#set($layout="common/layout-page-admin.vm")
#set($header="common/header-admin.vm")
#set($active_sidebar_id="emplyee")
#set($sidebar="common/sidebar-admin.vm")
<!-- <h1 class="page-header">人员信息</h1>
 -->
 
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">

			<div class="panel-heading">
				人员信息
				<div style="float: right;margin-top: -7px;">
					<button type="button" class="btn btn-primary">添加人员</button>
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#batch_add">批量添加</button>
				</div>
			<!-- Modal -->
			<div class="modal fade" id="batch_add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel">批量添加</h4>
			      </div>
			      <div class="modal-body">
			        <!-- Disable the styling -->
			        <form id="batch_add_form" action="upload.do?url=/rest/employee/batchAddCommit" method="post" enctype="multipart/form-data">  
					<input id="file-path" name="file" type="file" data-bfi-disabled >
					<!-- <input id="month-end" type="text" style="float: right;margin-top: -24px;width: 250px;" placeholder="输入计算月最终日 例如：2015-05-31"> -->
					</form>
			      </div>
			      <div class="modal-footer">
			        <button type="button" class="btn btn-primary" id="batch_add_commit">提交</button>
			        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
			      </div>
			    </div>
			  </div>
			</div>
			<script type="text/javascript">
			
			</script>
				
			</div>

			<!-- /.panel-heading -->
			<div class="panel-body">
				<div class="table-responsive">
					<!-- <table class="table table-striped table-bordered table-hover" id="dataTables-example"> -->
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead>
							<tr>
								<th>ID</th>
								<th>人员姓名</th>
								<th>类型</th>
								<th>片区</th>
								<th>区</th>
								<th>所属网格</th>
								<th>到职日</th>
								<th>职务暂停日</th>
							</tr>
						</thead>
						<tbody id="tables-rows">
						
						</tbody>
					</table>
			<script type="text/juicer" id="tmpl-tables">
				{@each employees as employee}
					<tr class="odd gradeX">
						<td>!{employee.id}</td>
						<td>!{employee.employeeName}</td>
						<td>!{employee.type}</td>
						<td>!{employee.regionPQ}</td>
						<td>!{employee.regionQ}</td>
						<td>!{employee.regionWG}</td>
						<td>!{employee.entryDate}</td>
						<td>!{employee.quitDate}</td>
					</tr>
				{@/each}
			</script>
				</div>
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>

<script>
	(function() {
		require([ '${s.ctx}resources/js/biz-init.js' ], function() {
			var employeeJs = '${s.ctx}pages-js/employee.js?version=2';
			require([ "jquery", 'biz-utils', employeeJs, 'EventEmitter', 'juicer' ], function($, Biz, employeeJs) {
				Biz.Utils.debug("dependencies loaded.");
				$(document).ready(function() {
					Biz.Utils.debug("document ready.");
					new employeeJs().init();
				});
			});
		});
	}());
</script>